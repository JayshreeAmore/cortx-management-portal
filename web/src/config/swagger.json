{
  "swagger": "2.0",
  "info": {
    "version": "1.0.0"
  },
  "basePath": "/api/v1",
  "schemes": [
    "http"
  ],
  "produces": [
    "application/json"
  ],
  "paths": {
    "/sessionkey": {
      "get": {
        "tags": [
          "Get SessionKey"
        ],
        "summary": "Gets Hard coded session key. In future this needs to be generated Login mechanism and this api will be scrapped",
        "responses": {
          "200": {
            "description": "OK"
          },
          "400": {
            "description": "Bad request"
          }
        },
        "content": {
          "application/json": {}
        },
        "parameters": [
          {
            "name": "user",
            "in": "query",
            "description": "Specifies the user name",
            "required": true,
            "type": "string"
          }
        ]
      }
    },
    "/alerts": {
      "get": {
        "tags": [
          "Get Alerts"
        ],
        "summary": "Gets Alerts from Python API",
        "responses": {
          "200": {
            "description": "Alerts",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "total_records": {
                      "type": "integer",
                      "description": "Alerts count"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Missing Valid Required Parameters"
          },
          "404": {
            "description": "Alert Not Found"
          }
        },
        "content": {
          "application/json": {}
        },
        "parameters": [
          {
            "name": "sortby",
            "in": "query",
            "description": "Specifies sort by option",
            "required": true,
            "type": "string",
            "enum": [
              "created_time"
            ],
            "default": "created_time"
          },
          {
            "name": "dir",
            "in": "query",
            "description": "Specifies sort direction option",
            "required": true,
            "type": "string",
            "enum": [
              "asc",
              "desc"
            ],
            "default": "desc"
          },
          {
            "name": "offset",
            "in": "query",
            "description": "Specifies offset of the result",
            "required": true,
            "type": "integer",
            "default": 1
          },
          {
            "name": "limit",
            "in": "query",
            "description": "Specifies limit for results per page",
            "required": true,
            "type": "integer",
            "default": 10
          }
        ]
      }
    },
    "/alerts/{alert_id}": {
      "patch": {
        "tags": [
          "Edit Alerts"
        ],
        "summary": "Forward the Edit Alert request to Python server and send the Python server response to client.",
        "responses": {
          "204": {
            "description": "OK (No Conent)"
          },
          "404": {
            "description": "Alert Not Found"
          },
          "400": {
            "description": "Bad Request"
          }
        },
        "content": {
          "application/json": {}
        },
        "parameters": [
          {
            "name": "alert_id",
            "in": "path",
            "description": "Specifies the alert id",
            "required": true,
            "type": "string"
          },
          {
            "name": "alert",
            "in": "body",
            "description": "Alert request",
            "schema": {
              "type": "object",
              "required": false,
              "properties": {
                "acknowledged": {
                  "type": "boolean"
                },
                "comments": {
                  "type": "string"
                }
              }
            }
          }
        ]
      }
    },
	"/stats/{statstype}": {
      "get": {
        "tags": [
          "Get Stats"
        ],
        "summary": "Get statetics like throughput, latency, IOPs",
        "responses": {
          "200": {
            "description": "OK"
          },
          "400": {
            "description": "Bad request"
          }
        },
        "content": {
          "application/json": {}
        },
        "parameters": [
          {
            "name": "statstype",
            "in": "path",
            "description": "Specifies the stats type",
            "required": true,
            "type": "string",
            "enum": [
              "throughput",
              "latency",
              "iops"
            ],
            "default": "throughput"
          },
          {
            "name": "id",
            "in": "query",
            "description": "from (epoch) time",
            "required": false,
            "type": "integer",
            "default": "1"
          },
          {
            "name": "from",
            "in": "query",
            "description": "from (epoch) time",
            "required": true,
            "type": "integer",
            "default": "1571830389"
          },
          {
            "name": "to",
            "in": "query",
            "description": "to (epoch) time",
            "required": true,
            "type": "integer",
            "default": "1571830449"
          },
          {
            "name": "interval",
            "in": "query",
            "description": "from (epoch) time",
            "required": false,
            "type": "integer",
            "default": "10"
          }
        ]
      }    
    },
	"/config": {
      "get": {
        "tags": [
          "Get System Config"
        ],
        "summary": "Get the System Configuration from mock server.",
        "responses": {
          "200": {
            "description": "System Config",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "system_config": {
                      "type": "object"
                    }
                  }
                }
              }
            }
          },
          "404": {
            "description": "No Data Found"
          },
          "400": {
            "description": "Bad Request"
          }
        },
        "content": {
          "application/json": {}
        }
      },
      "post": {
        "tags": [
          "Save System Config"
        ],
        "summary": "Save the System configuration to the mock server.",
        "responses": {
          "200": {
            "description": "OK"
          },
          "400": {
            "description": "Bad Request"
          }
        },
        "content": {
          "application/json": {}
        },
        "parameters": [
          {
            "name": "system_config",
            "in": "body",
            "description": "system config",
            "schema": {
              "$ref": "#/definitions/system_config"
            }
          }
        ]
      }
    },
    "/networkmanagement": {
      "get": {
        "tags": [
          "Get System Config for management network settings"
        ],
        "summary": "Get the System Configuration for management network settings.",
        "responses": {
          "200": {
            "description": "System Config",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "system_config": {
                      "type": "object"
                    }
                  }
                }
              }
            }
          },
          "404": {
            "description": "No Data Found"
          },
          "400": {
            "description": "Bad Request"
          }
        },
        "content": {
          "application/json": {}
        }
      },
      "patch": {
        "tags": [
          "Save System Config for management network settings"
        ],
        "summary": "Save the System configuration for management network settings.",
        "responses": {
          "200": {
            "description": "OK"
          },
          "400": {
            "description": "Bad Request"
          }
        },
        "content": {
          "application/json": {}
        },
        "parameters": [
          {
            "name": "system_config",
            "in": "body",
            "description": "system config",
            "schema": {
              "$ref": "#/definitions/system_config"
            }
          }
        ]
      }
    },
    "/user/admin": {
      "post": {
        "tags": [
          "Register the admin user"
        ],
        "summary": "Register and create profile for CSM admin user",
        "responses": {
          "200": {
            "description": "Admin user created"
          },
          "404": {
            "description": "No Data Found"
          },
          "400": {
            "description": "Bad Request"
          }
        },
        "content": {
          "application/json": {}
        },
        "parameters": [
          {
            "name": "admin user",
            "in": "body",
            "description": "CSM Admin User request",
            "schema": {
              "type": "object",
              "required": false,
              "properties": {
                "username": {
                  "type": "string",
                  "example": "admin"
                },
                "password": {
                  "type": "string",
                  "example": "admin"
                }
              }
            }
          }
        ]      
      }
    },
    "/login": {
      "post": {
        "tags": [
          "CSM admin user login"
        ],
        "summary": "CSM admin user login",
        "responses": {
          "200": {
            "description": "Admin user created"
          },
          "404": {
            "description": "No Data Found"
          },
          "400": {
            "description": "Bad Request"
          }
        },
        "content": {
          "application/json": {}
        },
        "parameters": [
          {
            "name": "admin user",
            "in": "body",
            "description": "CSM Admin User request",
            "schema": {
              "type": "object",
              "required": false,
              "properties": {
                "username": {
                  "type": "string",
                  "example": "admin"
                },
                "password": {
                  "type": "string",
                  "example": "admin"
                }
              }
            }
          }
        ]
      }
    }
  },
  "definitions": {
    "system_config": {
      "type": "object",
      "required": false,
      "properties": {
        "systemconfig": {
          "type": "object",
          "properties": {
            "management_network": {
              "type": "object",
              "properties": {
                "ipv4": {
                  "type": "object",
                  "required": false,
                  "properties": {
                    "isManual": {
                      "type": "boolean"
                    },
                    "ipAddress": {
                      "type": "string",
                      "example": "127.0.0.1"
                    },
                    "netmask": {
                      "type": "string",
                      "example": "255.255.255.0"
                    },
                    "gateway": {
                      "type": "string",
                      "example": "255.255.255.0"
                    }
                  }
                },
                "ipv6": {
                  "type": "object",
                  "required": false,
                  "properties": {
                    "isManual": {
                      "type": "boolean"
                    },
                    "gateway": {
                      "type": "string",
                      "example": "255.255.255.0"
                    },
                    "static_addr": {
                      "type": "array",
                      "items": {
                        "ip_address": {
                          "type": "string"
                        }
                      },
                      "example": [
                        {
                          "ip_address": "127.0.0.1"
                        },
                        {
                          "ip_address": "127.0.0.2"
                        },
                        {
                          "ip_address": "127.0.0.3"
                        }
                      ]
                    }
                  }
                }
              }
            },
            "data_network_setting": {
              "type": "object",
              "required": false,
              "properties": {
                "isExternalLoadBalancer": {
                  "type": "boolean"
                },
                "networkPreference": {
                  "type": "array",
                  "items": "string",
                  "example": [
                    "ipv4",
                    "ipv6"
                  ]
                }
              }
            }
          }
        }
      }
    }
  }
}